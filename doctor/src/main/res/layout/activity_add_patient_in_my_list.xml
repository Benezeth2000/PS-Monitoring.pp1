<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_patient_in_my_list">

    <RelativeLayout
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#45706F"
        android:padding="@dimen/_10sdp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:text="Add patient"
            android:textColor="@color/white"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/firtName"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="First name"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/middleName"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Middle name"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/lastName"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Last name"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/address"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Address"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/job"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Job"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/phoneNo"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Phone number"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/diseases"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Diseases"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/patientEmail"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="patient email"
                android:textSize="@dimen/_14sdp" />

            <EditText
                android:id="@+id/passwordUser"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:inputType="number"
                android:hint="password"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/scheduled"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_250sdp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15ssp"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14ssp"
                    android:text="Schedule Appointment"/>

                <TextView
                    android:id="@+id/selectDate"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date"
                    android:textColor="#2B8C2F"
                    android:textSize="@dimen/_14ssp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/selectMedicalReport"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Select patient Medical Report"
                android:paddingTop="@dimen/_8sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:textSize="@dimen/_14sdp" />

            <Button
                android:id="@+id/addPatient"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Add"
                android:textAllCaps="false"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>